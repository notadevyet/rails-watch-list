<div class='container'>
<h1><%= @list.name %></h1>

<% unless @list.bookmarks.empty? %>
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card-product">
      <%= cl_image_tag bookmark.movie.poster_url, height: 300, width: 400, crop: :fill %>
        <div class="card-product-infos">
          <h2><%= bookmark.movie.title %></h2>
          <p><%= bookmark.movie.overview %></p>
          <p><%= bookmark.movie.rating %></p>
          <p><%= bookmark.comment %></p>
          <p><%= link_to "ðŸ—‘", bookmark_path(bookmark), method: :delete %></p>
        </div>
    </div>
  <% end %>
<% else %>
      <p>There are no bookmarks to show here</p>
<% end %>

<%= link_to 'New bookmark', new_list_bookmark_path(@list), class: "btn btn-flat" %> |
<%= link_to 'Back to Lists', root_path%>
</div>
